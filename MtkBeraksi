public class MtkBeraksi {
    public static void main(String[] args){
        Mtk objMtk = new  Mtk();
        System.out.println("[1] Penambahan [2] Pengurangan [3] Perkalian [4] Pembagian");
        
        Scanner inputan = new Scanner (System.in);
        int pilih = inputan.nextInt();
        if (pilih == 1){
            System.out.println("PENAMBAHAN");
            System.out.print("Masukan Nilai Pertama : ");
            int nilai1=inputan.nextInt();
            System.out.print("Masukan Nilai Kedua : ");
            int nilai2=inputan.nextInt();
            objMtk.penambahan(nilai1, nilai2);
        } else if (pilih == 2){
            System.out.println("PENGURANGAN");
            System.out.print("Masukan Nilai Pertama : ");
            int nilai1=inputan.nextInt();
            System.out.print("Masukan Nilai Kedua : ");
            int nilai2=inputan.nextInt();
            objMtk.pengurangan(nilai1, nilai2);
        } else if (pilih == 3){
            System.out.println("PERKALIAN");
            System.out.print("Masukan Nilai Pertama : ");
            int nilai1=inputan.nextInt();
            System.out.print("Masukan Nilai Kedua : ");
            int nilai2=inputan.nextInt();
            objMtk.perkalian(nilai1, nilai2);
        } else if (pilih ==4) {
            System.out.println("PEMBAGIAN");
            System.out.print("Masukan Nilai Pertama : ");
            int nilai1=inputan.nextInt();
            System.out.print("Masukan Nilai Kedua : ");
            int nilai2=inputan.nextInt();
            objMtk.pembagian(nilai1, nilai2);
        } else{
            System.out.println("Pilihan Tidak Ada");
        }
    }
    
}
